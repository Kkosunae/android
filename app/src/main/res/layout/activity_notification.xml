<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.NotificationActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_alam_toolbar"
        android:layout_width="0dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_alam_container"
        app:menu="@menu/home_noti_menu">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/nanum_b"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:text="@string/toolbar_menu_notification"/>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:id="@+id/home_alam_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/home_alam_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_alam_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

