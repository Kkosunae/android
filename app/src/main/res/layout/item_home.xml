<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="219dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/item_iv_profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/item_iv_badge"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintStart_toEndOf="@+id/item_iv_profile"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="백몽이"
            android:textSize="11sp"
            android:fontFamily="@font/nanum_r"
            app:layout_constraintStart_toEndOf="@id/item_iv_badge"
            app:layout_constraintTop_toTopOf="@id/item_iv_badge"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/icon_follow"
            android:layout_marginTop="8dp"/>
        <GridLayout
            android:id="@+id/item_grid_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_iv_profile">

        </GridLayout>
        <TextView
            android:id="@+id/item_tv_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_grid_layout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
