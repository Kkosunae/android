<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kkosunae" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/key_color</item>
        <item name="colorPrimaryVariant">@color/colorVisVis</item>
        <item name="colorOnPrimary">@color/colorVisVis</item>
        <item name="colorPrimaryDark">@color/colorVisVis</item>

        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Splash screen Theme-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorVisVis</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Kkosunae</item>
    </style>
    <style name="ExtraBoldText40Black">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorNightBlack</item>
        <item name="android:fontFamily">@font/nanum_eb</item>
    </style>
    <style name="ExtraBoldText20Black">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorNightBlack</item>
        <item name="android:fontFamily">@font/nanum_eb</item>
    </style>
</resources>