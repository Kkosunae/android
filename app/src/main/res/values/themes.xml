<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kkosunae" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorVisVis</item>
        <item name="colorOnPrimary">@color/colorVisVis</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/sub_color_baise</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Splash screen Theme-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorVisVis</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Kkosunae</item>
    </style>
    <style name="BoldText40Black">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorNightBlack</item>
        <item name="android:fontFamily">@font/nanum_b</item>
    </style>
    <style name="BoldText20Black">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorNightBlack</item>
        <item name="android:fontFamily">@font/nanum_b</item>
    </style>
</resources>